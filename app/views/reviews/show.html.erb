<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Review #<%= @review.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Favorite</dt>
              <dd><%= @review.favorite %></dd>

              <dt>User</dt>
              <dd><%= @review.user_id %></dd>

              <dt>Comment</dt>
              <dd><%= @review.comment %></dd>

              <dt>Date</dt>
              <dd><%= @review.date %></dd>

              <dt>Location</dt>
              <dd><%= @review.location %></dd>

              <dt>Rating</dt>
              <dd><%= @review.rating %></dd>

              <dt>Oyster</dt>
              <dd><%= @review.oyster.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/reviews" class="btn btn-info">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/reviews/<%= @review.id %>/edit" class="btn btn-success">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
