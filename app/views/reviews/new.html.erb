<!-- Validation failure messages -->

<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Review</h3>
      </div>
      <div class="panel-body">
        <form action="/create_review" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for favorite -->
          <div class="form-group">
            <label for="favorite" class="col-sm-2 control-label">
              Favorite
            </label>
            <div class="col-sm-10">
              <%= select_tag(:favorite, options_for_select([true, false], @review.favorite), :class => "form-control") %>
            </div>

            </div>


          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @review.user_id %>">
            </div>
          </div>

          <!-- Label and input for comment -->
          <div class="form-group">
            <label for="comment" class="col-sm-2 control-label">
              Comment
            </label>
            <div class="col-sm-10">
              <input type="text" id="comment" name="comment" placeholder="Comment" class="form-control" value="<%= @review.comment %>">
            </div>
          </div>

          <!-- Label and input for date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>
            <div class="col-sm-10">
              <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @review.date %>">
            </div>
          </div>

          <!-- Label and input for location -->
          <div class="form-group">
            <label for="location" class="col-sm-2 control-label">
              Location
            </label>
            <div class="col-sm-10">
              <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @review.location %>">
            </div>
          </div>

          <!-- Label and input for rating -->
          <div class="form-group">
            <label for="rating" class="col-sm-2 control-label">
              Rating
            </label>
            <div class="col-sm-10">
              <%= select_tag(:rating, options_for_select([1,2,3,4,5], @review.rating), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for oyster_id -->
          <div class="form-group">
            <label for="oyster_id" class="col-sm-2 control-label">
              Oyster
            </label>
            <div class="col-sm-10">
              <%= select_tag(:oyster_id, options_from_collection_for_select(Oyster.all, :id, :name, @review.oyster_id), :class => "form-control") %>


            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Review
              </button>
              or
              <a href="/reviews">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
